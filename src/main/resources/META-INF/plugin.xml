<idea-plugin>
    <id>uk.ac.hud.team.2.0.ObjectWorkbench</id>
    <name>Objects Workbench</name>
    <vendor email="support@unimail.hud.ac.uk" url="http://www.yourcompany.com">University of Huddersfield</vendor>

    <description>Graphical Workshop plugin allowing to
    instantiate and inspect objects from the "workbench"
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="My Sample Tool Window" icon="/img/icon.png" anchor="right"
                    factoryClass="co.uk.team2.objectWorkbench.workbench.WorkbenchFactory"/>

        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action
                id="StackOverflow.AskQuestion.ToolsMenu"
                class="co.uk.team2.objectWorkbench.workbench.ExampleKotlinClass"
                text="Ask Question on Stack Overflow"
                description="Ask a Question on Stack Overflow">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>