<idea-plugin>
    <id>uk.ac.hud.team.2.0.ObjectWorkbench</id>
    <name>Objects Workbench</name>
    <vendor email="support@unimail.hud.ac.uk" url="http://www.hud.ac.uk">University of Huddersfield</vendor>

    <description><![CDATA[
    Short Description of a plugin.<br>
    <em>by team 2.0</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Class Graphs" anchor="right" icon="/GraphIcon.svg"
                    factoryClass="uk.ac.hud.objectworkbench.ui.GraphWindowFactory"
                    secondary="true" order="first" />
        <toolWindow id="Objects Workbench" anchor="bottom" icon="/ObjectsIcon.svg"
                    factoryClass="uk.ac.hud.objectworkbench.ui.ObjectsWindowFactory"
                    secondary="true" order="first" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>